@model IEnumerable<SchoolManager.Models.Subjects>
<div class="data-body">
    <table class="table">
        <thead class="bg-gradient-light">
            <tr>
                <th> Tên Môn  </th>
                <th> Ghi chú </th>
                <th> Trạng thái </th>
                <th class="d-flex justify-content-center"> Tác vụ </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td> @item.Name </td>
                @if (item.Node.ToString().Length > 200)
                {
                    <td> @item.Node.ToString().Substring(0, 200)</td>

                }
                else
                {
                    <td> @item.Node.ToString()</td>

                }
                @if (item.Status == 0)
                {
                    <td> Đang giảng dạy</td>
                }
                else
                {
                    <td> Ngừng giảng dạy </td>
                }
                <td class="d-flex justify-content-end">
                    <button class="btn btn-edit p-0" data-toggle="modal" data-target="#modalAdd" type="button" onclick="EditClick(@item.ID , '/Subject/FormCreateEdit' , 'add-or-edit')"> <i class="far fa-edit text-success"></i> </button>
                    <button class="btn btn-detail p-0" data-toggle="modal" data-target="#modalAdd2" type="button" onclick="GetByID(@item.ID,'/Subject/DetailInfo','infoDetail')"><i class="fas fa-info-circle  text-primary"></i></button>
                    <button class="btn btn-delete p-0" onclick="Delete(@item.ID , '/Subject/Delete', '/Subject/Listsubject' , 'get-data')"> <i class="far fa-trash-alt text-danger"></i> </button>
                </td>
            </tr>
            }


        </tbody>

        
    </table>
</div>
<div id="modalAdd2" class="modal fade" role="dialog">
    <div class="modal-dialog">

        Modal content
        <div class="modal-content">
            <div class="modal-header bg-gradient-yellow">
                <h4 class="modal-title text-white"> Cập nhập thông tin</h4>
                <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
            </div>
            <div class="infoDetail modal-body">

            </div>
            <div class="modal-footer">

                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<div class="pagination">
    @for (int i = 1; i <= ViewBag.pageCount; i++)
    {
        if (i == ViewBag.pageNumber)
        {
            <button data-page="@i" class="active">  @i  </button>

        }
        else
        {
            <button data-page="@i" onclick="Pagination( @i ,  '/Subject/Listsubject' , 'get-data')">  @i  </button>
        }
    }
</div>
