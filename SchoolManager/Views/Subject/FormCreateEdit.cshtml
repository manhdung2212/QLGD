

    <div class="update-info">
        <div class="d-flex justify-content-between">
            <p class="title"> Cập nhập thông tin </p>
            <button type="button" class="close text-blue" data-dismiss="modal">&times;</button>
        </div>
        <hr />
        <form id="updateInfo">
            @if (ViewBag.data == null)
            {
                <input type="number" name="id" value="0" readonly hidden />
                <div class="row">
                    <div class="col-md-4">
                        <p>Tên Môn Học</p>
                        <input type="text" value="" name="name" class="form-control" />
                        <div class="error"></div>
                    </div>

                    <div class="col-md-4">
                        <p>Trạng thái</p>
                        <select class="form-control status" value="0" name="status">
                            <option value="0"> Đang Giảng Dạy </option>
                            <option value="1"> Ngừng  Giảng Dạy </option>
                        </select>
                        <div class="error"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8">
                        <p>Ghi chú</p>
                        <textarea class="form-control" name="node"></textarea>
                        <div class="error"></div>
                    </div>
                </div>

                <br />
                <div class="row m-0">
                    <button class="btn-update" type="button" onclick="AddOrEdit('updateInfo' , '/Subject/AddOrEdit' , '/Subject/Listsubject' , 'get-data')"> Thêm mới </button>
                </div>
            }
            else
            {
                <input type="number" name="id" value="@ViewBag.data.ID" readonly hidden />
                <div class="row">
                    <div class="col-md-4">
                        <p>Tên Môn Học</p>
                        <input type="text" value="@ViewBag.data.Name" name="name" class="form-control" />
                        <div class="error"></div>
                    </div>
                    <div class="col-md-4">
                        <p>Trạng thái</p>
                        <select class="form-control status" value="0" name="status">
                            @if (ViewBag.data.Status == 0)
                            {
                                <option value="0" selected> Đang giảng dạy </option>
                                <option value="1"> Ngừng giảng dạy </option>
                            }
                            else
                            {
                                <option value="0"> Đang giảng dạy </option>
                                <option value="1" selected> Ngừng  giảng dạy </option>
                            }

                        </select>
                        <div class="error"></div>
                    </div>
                </div>
                <div class="row"> 
                    <div class="col-md-8">
                        <p>Ghi chú</p>
                        <textarea class="form-control" name="node">@ViewBag.data.Node</textarea>

                        <div class="error">

                        </div>
                    </div>
                </div>
                
                <br />
                <div class="row m-0">
                    <button class="btn-update" type="button" onclick="AddOrEdit('updateInfo' , '/Subject/AddOrEdit' , '/Subject/Listsubject' , 'get-data')"> Cập nhập </button>
                </div>
            }

        </form>

    </div>

    