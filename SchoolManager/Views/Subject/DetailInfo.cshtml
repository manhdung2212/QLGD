@model SchoolManager.Models.Subject

<h2> Môn học @Model.Name</h2>
<table class="table table-striped">
    <tr>
        <th> Ghi chú  </th>
        <td>@Model.Node</td>
    </tr>

    <tr>
        <th> Ngày tạo </th>
        <td>@Model.CreateDate</td>
    </tr>

    <tr>
        <th>Người tạo</th>
        <td>@Model.UpdateDate</td>
    </tr>

    <tr>
        <th>Người cập nhập </th>
        <td>@Model.CreateBy</td>
    </tr>

    <tr>
        <th>Ngày cập nhập </th>
        <td>@Model.UpdateBy</td>
    </tr>

    <tr>
        <th>Trạng thái </th>
        @if( Model.Status == 0)
        {
            <td> Đang giảng dạy</td>
        }
        else
        {
            <td> Ngừng giảng dạy  </td>
        }
    </tr>
</table>



