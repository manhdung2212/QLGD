

<div class="update-info">
    <div class="d-flex justify-content-between">
        <p class="title"> Cập nhập thông tin </p>
        <button type="button" class="close text-blue" data-dismiss="modal">&times;</button>
    </div>
    <hr />
    <form id="formAddOrEdit">
        @if (ViewBag.data == null)
        {
            <input type="number" name="id" value="0" readonly hidden />
            <div class="row">
                <div class="col-md-4">
                    <p>Mã lớp</p>
                    <input type="text" value="" name="code" class="form-control" />
                    <div class="error"></div>
                </div>
                <div class="col-md-4">
                    <p>Tên lớp</p>
                    <input type="text" value="" name="name" class="form-control" />
                    <div class="error"></div>
                </div>
                <div class="col-md-4">
                    <p>Tên môn học</p>
                    <select id="subjectid" name="subjectid" class="form-control" value="">

                        @foreach (var item in (ViewBag.listSubject as IEnumerable<SchoolManager.Models.Subjects>))
                        {
                            <option value="@item.ID" selected>@item.Name</option>

                        }
                    </select>
                    <div class="error"></div>
                </div>
                <div class="col-md-4">
                    <p>Tên giảng viên</p>
                    <select id="lecturerid" name="lecturerid" class="form-control" value="">
                        @foreach (var item in (ViewBag.listLecturer as IEnumerable<SchoolManager.Models.Lecturer>))
                        {

                            <option value="@item.ID" selected>@item.Name</option>

                        }
                    </select>
                    <div class="error"></div>
                </div>
                <div class="col-md-4">
                    <p>Trạng thái</p>
                    <select id="status" name="status" class="form-control">
                        <option value="1">Đang nghỉ</option>
                        <option value="2">Đang học</option>

                    </select>
                    <div class="error"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8">
                    <p>Ghi chú</p>
                    <textarea class="form-control w-100" name="node"></textarea>
                    <div class="error"></div>
                </div>
            </div>
            <br />
            <div class="row m-0">
                <button class="btn-update" type="button" onclick="AddOrEdit('formAddOrEdit' , '/Class/AddOrEdit' , '/Class/ListClass' , 'get-data')">Thêm mới</button>
            </div>

        }
        else
        {
            <input type="number" name="id" value="@ViewBag.data.ID" readonly hidden />
            <div class="row">
                <div class="col-md-4">
                    <p>Mã lớp</p>
                    <input type="text" value="@ViewBag.data.Code" name="code" class="form-control" />
                    <div class="error"></div>
                </div>
                <div class="col-md-4">
                    <p>Tên lớp</p>
                    <input type="text" value="@ViewBag.data.Name" name="name" class="form-control" />
                    <div class="error"></div>
                </div>
                <div class="col-md-4">
                    <p>Tên môn học</p>
                    <select id="subjectid" class="form-control" name="subjectid" value="@ViewBag.data.SubjectID">

                        @foreach (var item in (ViewBag.listSubject as IEnumerable<SchoolManager.Models.Subjects>))
                        {
                            if (item.ID == ViewBag.data.SubjectID)
                            {
                                <option value="@item.ID" selected>@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.ID">@item.Name</option>
                            }
                        }
                    </select>
                    <div class="error"></div>
                </div>
                <div class="col-md-4">
                    <p>Tên giảng viên</p>
                    <select id="lecturerid" class="form-control" name="lecturerid" value="@ViewBag.data.LecturerID">
                        @foreach (var item in (ViewBag.listLecturer as IEnumerable<SchoolManager.Models.Lecturer>))
                        {
                            if (item.ID == ViewBag.data.LecturerID)
                            {
                                <option value="@item.ID" selected>@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.ID">@item.Name</option>
                            }
                        }
                    </select>
                    <div class="error"></div>
                </div>
                <div class="col-md-4">
                    <p>Trạng thái</p>
                    <select class="form-control status" value="@ViewBag.data.Status" name="status">
                        <option value="0"> Đang nghỉ </option>
                        <option value="1"> Đang học </option>
                    </select>
                    <div class="error"></div>
                </div>

            </div>
            <div class="row">
                <div class="col-md-8">
                    <p>Ghi chú</p>
                    <textarea class="form-control w-100" name="node">@ViewBag.data.Node</textarea>
                    <div class="error"></div>
                </div>
            </div>
            <br />
            <div class="row m-0">
                <button class="btn-update" type="button" onclick="AddOrEdit('formAddOrEdit' , '/Class/AddOrEdit' , '/Class/ListClass' , 'get-data')"> Cập nhập</button>
            </div>
        }

    </form>

</div>







