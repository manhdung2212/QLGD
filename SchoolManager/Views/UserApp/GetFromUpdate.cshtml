
    <form action="/" method="post" id="formAddOrEdit">
        @if (ViewBag.data == null)
        {
            <input type="number" name="id" value="0" class="form-control hidden" readonly hidden />
            <div class="row m-0 ">
                <div class="col-md-4">
                    <label> Họ và tên </label>
                    <input type="text" name="name" value="" class="form-control" data-null="notnull" />
                    <div class="error">

                    </div>
                </div>
                <div class="col-md-4">
                    <label> Account </label>
                    <input type="text" name="account" value="" class="form-control" />
                    <div class="error">

                    </div>
                </div>
                <div class="col-md-4">
                    <label> Password </label>
                    <input type="text" name="password" value="" class="form-control" />
                    <div class="error">

                    </div>
                </div>
            </div>
        }
        else
        {
            <input type="number" name="id" value="@ViewBag.data.userApp.ID" class="form-control hidden" readonly hidden />
            <div class="row m-0 ">
                <div class="col-md-4">
                    <label> Họ và tên </label>
                    <input type="text" name="name" value="@ViewBag.data.userApp.Name" class="form-control" data-null="notnull" />
                    <div class="error">

                    </div>
                </div>
                <div class="col-md-4">
                    <label> Account </label>
                    <input type="text" name="account" value="@ViewBag.data.userManager.Account" class="form-control" />
                    <div class="error">

                    </div>
                </div>
                <div class="col-md-4">
                    <label> Password </label>
                    <input type="text" name="password" value="@ViewBag.data.userManager.Password" class="form-control" />
                    <div class="error">

                    </div>
                </div>
            </div>
        }

    </form>
