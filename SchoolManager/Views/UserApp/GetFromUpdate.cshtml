


<div class="update-info">
    <div class="d-flex justify-content-between">
        <p class="title"> Cập nhập thông tin </p>
        <button type="button" class="close text-blue" data-dismiss="modal">&times;</button>
    </div>
    <hr />
    <form id="updateInfo">
        @if (ViewBag.data == null)
        {
            <input type="number" name="id" value="0" hidden readonly />
            <div class="row">
                <div class="col-md-4">
                    <p> Họ và tên </p>
                    <input type="text" name="name" value="" class="form-control" />
                </div>
                <div class="col-md-4">
                    <p> Account  </p>
                    <input type="text" name="account" value="" class="form-control" />
                </div>
                <div class="col-md-4">
                    <p> Password </p>
                    <input type="text" name="password" value="" class="form-control" />

                </div>
            </div>
        }
        else
        {
            <input type="number" name="id" value="@ViewBag.data.userApp.ID" hidden readonly />
            <div class="row">
                <div class="col-md-4">
                    <p> Họ và tên </p>
                    <input type="text" name="name" value="@ViewBag.data.userApp.ID" class="form-control" />
                </div>
                <div class="col-md-4">
                    <p> Account  </p>
                    <input type="text" name="account" value="@ViewBag.data.userManager.Account" class="form-control" />
                </div>
                <div class="col-md-4">
                    <p> Password </p>
                    <input type="text" name="password" value="@ViewBag.data.userManager.Password" class="form-control" />

                </div>
            </div>
        }
        <br />
        <div class="row m-0">
            <button class="btn-update" type="button" onclick="AddOrEdit('updateInfo' , '/UserApp/AddOrEdit' , '/UserApp/ListUser' , 'get-data')"> Thêm mới </button>
        </div>
    </form>

</div>
    