@model SchoolManager.Models.Resource

  
<table class="table table-triped">
   
   
        <tr>
            <th>Tên CSVC : </th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Số lượng: </th>
            <td>@Model.Amount</td>
        </tr>
        <tr>
            <th>Trạng thái: </th>
            @if (Model.Status == 1)
            {
                <td>Đang hoạt động</td>
}
            else
            {
                <td>Đã có hỏng</td>
}
        </tr>
        <tr>
            <th>Số lượng hỏng : </th>
            <td>@Model.Broken</td>
        </tr>
        <tr>
            <th>Thuộc về: </th>
            <td>Tòa nhà</td>
        </tr>
        <tr>
            <th>Tên tòa nhà: </th>

            @foreach (var item in (ViewBag.listbuild as IEnumerable<SchoolManager.Models.Building>))
            {
                if (item.ID == Model.IDBuildOrRoom)
                {
                    <td>@item.Name</td>
}
            }

        </tr>
        <tr>
            <th>Ghi chú: </th>
            <td>@Model.Node</td>
        </tr>
        <tr>
            <th>Ngày tạo : </th>
            <td>@Model.CreateDate</td>
        </tr>
        <tr>
            <th>Ngày cập nhật: </th>
            <td>@Model.UpdateDate</td>
        </tr>
        <tr>
            <th>Người tạo : </th>
            <td>@Model.CreateBy</td>
        </tr>
        <tr>
            <th>Người cập nhật: </th>
            <td>@Model.UpdateBy</td>
        </tr>

</table>






