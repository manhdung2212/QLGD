
@{
    ViewBag.Title = "Index";
}

<div class="user-app">
    <div class="d-flex justify-content-between data-header p-2">
        <h4 class="m-0 mt-1">  Cơ sở vật chất </h4>
        <div class="d-flex justify-content-end">

            <input type="text" name="searchname" value="" placeholder="Nhập tên...." />
            <button href="#demo" data-toggle="collapse" class="btn btn-primary mx-1"> Nâng cao </button>
            <button class="btn btn-success btn-add" data-toggle="modal" data-target="#modalAdd" type="button" onclick="AddClick(0 , '/Resources/FormCreateEdit' , 'add-or-edit')"> Thêm mới</button>
        </div>
    </div>
    <br />
    <div id="demo" class="collapse">
        <div class="row">
         
            <div class="col-md-4">
                <select class="form-control status" name="status">
                    <option value="-1" selected>Chọn trạng thái </option>
                    <option value="0"> Đang hoạt động </option>
                    <option value="1"> Ngừng  hoạt động </option>

                </select>
            </div>
            <div class="col-md-4">
                <select name="IDBuildorRoom" class="form-control IDbuildorroom">
                    <option value="0">Chọn tên tòa nhà</option>
                    @foreach (var item in ViewBag.listbuild as IEnumerable<SchoolManager.Models.Building>)
                    {
                        <option value="@item.ID">@item.Name</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <div class="get-data m-2">

    </div>
    <hr />
    <div id="modalAdd" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header bg-gradient-green">
                    <h4 class="modal-title text-white"> Cập nhập thông tin</h4>
                    <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="add-or-edit">


                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn-createEdit btn btn-success" onclick="AddOrEdit('formAddOrEdit' , '/Resources/AddOrEdit' , '/Resources/ListResource' , 'get-data')"> Thêm mới</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
</div>
@section scripts{
    <script>
        var data = {
            pageNumber: 1,
            pageSize: 5,
            search: '',
            searchstatus: -1,
            idbuildorroom: 0
        }
        GetListStudent('/Resources/ListResource', 'get-data');
        Search('/Resources/ListResource', 'get-data');
        Searchstatus('/Resources/ListResource', 'get-data');
        FillerBuild('/Resources/ListResource', 'get-data');
    </script>
}






