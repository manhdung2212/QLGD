<div class="update-info">
    <div class="d-flex justify-content-between">
        <p class="title"> Cập nhập thông tin </p>
        <button type="button" class="close text-blue" data-dismiss="modal">&times;</button>
    </div>
    <hr />
    <form id="formAddOrEdit">
        @if (ViewBag.data == null)
        {
            <input type="number" name="id" value="0" hidden readonly />
            <div class="row">
                <div class="col-md-4">
                    <p>Tên CSVC</p>
                    <input type="text" value="" name="name" class="form-control" />
                    <div class="error"></div>
                </div>

                <div class="col-md-4">
                    <p>Số lượng</p>
                    <input type="number" value="" name="amount" class="form-control" />
                    <div class="error"></div>
                </div>
                <div class="col-md-4">
                    <p>số lượng hỏng</p>
                    <input type="number" value="0" name="broken" class="form-control" />
                    <div class="error"></div>

                </div>
                <div class="col-md-4">
                    <p>Thuộc về</p>
                    <select id="BuildorRoom" value="BuildorRoom" name="BuildorRoom" class="form-control">
                        <option value="1" selected>Toà nhà</option>
                    </select>
                    <div class="error"></div>
                </div>
                <div class="col-md-4">
                    <p>Tên tòa nhà</p>
                    <select name="IDBuildorRoom" class="form-control">
                        @foreach (var item in ViewBag.listbuild as IEnumerable<SchoolManager.Models.Building>)
                        {
                            <option value="@item.ID">@item.Name</option>
                        }
                    </select>
                    <div class="error"></div>
                </div>
                <div class="col-md-4">
                    <p>Trạng thái</p>
                    <select class="form-control status" value="0" name="status">
                        <option value="0"> Đang hoạt động </option>
                        <option value="1"> Ngừng  hoạt động </option>
                    </select>
                    <div class="error"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-10">
                    <p>Ghi chú</p>
                    <textarea class="form-control w-100"  name="node"></textarea>
                    <div class="error"></div>
                </div>
            </div>

        }
        else
        {
            <input type="number" name="id" value="@ViewBag.data.ID" readonly hidden />
            <div class="row">
                <div class="col-md-4">
                    <p>Tên tòa nhà</p>
                    <input type="text" value="@ViewBag.data.Name" name="name" class="form-control" />
                    <div class="error"></div>
                </div>
                <div class="col-md-4">
                    <p>Số lượng</p>
                    <input type="number" value="@ViewBag.data.Amount" name="amount" class="form-control" />
                    <div class="error"></div>
                </div>
                <div class="col-md-4">
                    <p>số lượng hỏng</p>
                    <input type="number" value="@ViewBag.data.Broken" name="broken" class="form-control" />
                    <div class="error"></div>

                </div>
                <div class="col-md-4">
                    <p>Thuộc về</p>
                    <select class="form-control BuildorRoom" value="0" name="BuildorRoom">
                        <option value="1" selected>Tòa nhà</option>
                    </select>
                    <div class="error"></div>
                </div>
                <div class="col-md-4">
                    <p>Tên tòa nhà</p>
                    <select name="IDBuildorRoom" class="form-control">
                        @foreach (var item in ViewBag.listbuild as IEnumerable<SchoolManager.Models.Building>)
                        {
                            <option value="@item.ID">@item.Name</option>
                        }
                    </select>
                    <div class="error"></div>
                </div>
                <div class="col-md-4">
                    <p>Trạng thái</p>
                    <select class="form-control status" value="0" name="status">
                        @if (@ViewBag.data.Status == 0)
                        {
                            <option value="0" selected> Đang hoạt động </option>
                            <option value="1"> Ngừng  hoạt động </option>
                        }
                        else
                        {
                            <option value="0"> Đang hoạt động </option>
                            <option value="1" selected> Ngừng  hoạt động </option>
                        }

                    </select>
                    <div class="error"></div>
                </div>

            </div>
            <div class="row">
                <div class="col-md-10">
                    <p>Ghi chú</p>
                    <textarea class="form-control" name="node">@ViewBag.data.Node </textarea>
                    <div class="error"></div>
                </div>
            </div>
        }
        <br />
        <div class="row m-0">
            <button class="btn-update" type="button" onclick="AddOrEdit('formAddOrEdit' , '/Resources/AddOrEdit' , '/Resources/ListResource' , 'get-data')"> Thêm mới </button>
        </div>
    </form>

</div>
    




