@model SchoolManager.Models.Building
<h2> Tòa nhà @Model.Name</h2>

<table class="table table-striped">
    <tr>
        <th>Tên tòa nhà </th>
        <td>@Model.Name</td>
    </tr>

    <tr>
        <th>Ghi chú </th>
        <td>@Model.Node</td>
    </tr>

    <tr>
        <th>Ngày tạo  </th>
        <td>@Model.CreateDate</td>
    </tr>
    <tr>
        <th>Ngày cập nhật </th>
        <td>@Model.UpdateDate</td>
    </tr>
    <tr>
        <th>Người tạo  </th>
        <td>@Model.CreateBy</td>
    </tr>
    <tr>
        <th>Người cập nhật </th>
        <td>@Model.UpdateBy</td>
    </tr>
    <tr>
        <th>Trạng thái  </th>
        @if (Model.Status == 0)
        {
            <td> Đang hoạt động</td>

        }
        else
        {
            <td> Ngừng hoạt động</td>
        }
    </tr>

</table>




