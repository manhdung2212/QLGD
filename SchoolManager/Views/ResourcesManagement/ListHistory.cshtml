@model IEnumerable<SchoolManager.ViewModels.ViewResourceManager>

<div class="data-body">
    <table class="table">
        <thead class="bg-gradient-light">
            <tr>
                <th> Tên giảng viên  </th>
                <th> Tên tài nguyên  </th>
                <th> Thời gian mượn  </th>
                <th> Thời gian Trả  </th>
                <th> Ghi chú </th>
                <th> Trạng thái </th>
                <th class="d-flex justify-content-center"> Tác vụ </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td> @item.lecturer.Name </td>
                    <td> @item.resource.Name </td>
                    <td> @item.resourcesManagement.TimeTake </td>
                    <td> @item.resourcesManagement.TimeGive </td>
                    <td> @item.resourcesManagement.Node</td>
                    @if (item.resourcesManagement.Status == 0)
                    {
                        <td>
                            <label class="switch">
                                <input type="checkbox" class="checkid" data-id="@item.resourcesManagement.ID" data-name="@item.lecturer.Name">
                                <span class="slider round"></span>
                            </label>
                        </td>
                    }
                    else
                    {
                        <td> Đã Trả </td>
                    }
                    <td class="d-flex justify-content-end">
                        <button class="btn btn-edit p-0" data-toggle="modal" data-target="#modalAdd" type="button" onclick="EditClick(@item.resourcesManagement.ID , '/ResourcesManagement/FormCreateEdit' , 'add-or-edit')"> <i class="far fa-edit text-success"></i> </button>
                        <button class="btn btn-detail p-0" data-toggle="modal" data-target="#modalAdd3" type="button" onclick="EditClick(@item.resourcesManagement.ID , '/ResourcesManagement/Detail' , 'infodetail')"> <i class="fas fa-info-circle text-primary"></i> </button>

                        <button class="btn btn-delete p-0" onclick="Delete(@item.resourcesManagement.ID , '/ResourcesManagement/Delete', '/ResourcesManagement/ListHistory' , 'get-data')"> <i class="far fa-trash-alt text-danger"></i> </button>
                    </td>
                </tr>
            }
        </tbody>
        
    </table>
</div>
<div id="modalAdd3" class="modal fade" role="dialog">
    <div class="modal-dialog">

        Modal content
        <div class="modal-content">
            <div class="modal-header bg-gradient-yellow">
                <h4 class="modal-title text-white"> Cập nhập thông tin</h4>
                <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
            </div>
            <div class=" infodetail">

            </div>
            <div class="modal-footer">

                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>
<div class="pagination">
    @for (int i = 1; i <= ViewBag.pageCount; i++)
    {
        if (i == ViewBag.pageNumber)
        {
            <button data-page="@i" class="active">  @i  </button>

        }
        else
        {
            <button data-page="@i" onclick="Pagination( @i ,  '/ResourcesManagement/ListHistory' , 'get-data')">  @i  </button>
        }
    }
</div>
