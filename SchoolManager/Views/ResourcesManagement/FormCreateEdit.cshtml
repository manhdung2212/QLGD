




<div class="update-info">
    <div class="d-flex justify-content-between">
        <p class="title"> Cập nhập thông tin </p>
        <button type="button" class="close text-blue" data-dismiss="modal">&times;</button>
    </div>
    <hr />
    <form id="updateInfo">
        @if (ViewBag.data == null)
        {
            <input type="number" name="id" value="0" readonly hidden />
            <div class="row">
                <div class="col-md-4">
                    <p>Giảng viên mượn</p>
                    <select id="lecturerid" name="LecturerID" class="form-control">

                        @foreach (var item in ViewBag.ListLecture as IEnumerable<SchoolManager.Models.Lecturer>)
                        {
                            <option value="@item.ID">@item.Name</option>
                        }
                    </select>


                    <div class="error text-danger"></div>
                </div>

                <div class="col-md-4">
                    <p> Cơ sở vật chất</p>
                    <select id="resourcesid" name="ResourcesID" class="form-control">

                        @foreach (var item in ViewBag.ListResources as IEnumerable<SchoolManager.Models.Resources>)
                        {
                            <option value="@item.ID">@item.Name</option>
                        }
                    </select>
                    <div class="error"></div>
                </div>
                <div class="col-md-4">
                    <p>Trạng thái</p>
                    <select class="form-control status" value="0" name="status">
                        <option value="0"> Đang mượn</option>
                        <option value="1"> Đã trả </option>
                    </select>
                    <div class="error"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8">
                    <p> Ghi chú </p>
                    <textarea class="form-control" name="node"> </textarea>
                    <div class="error"></div>
                </div>
            </div>
            <br />
            <div class="row m-0">
                <button class="btn-update" type="button" onclick="AddOrEdit('updateInfo' , '/ResourcesManagement/AddOrEdit' , '/ResourcesManagement/ListHistory' , 'get-data')"> Thêm mới </button>
            </div>
        }
        else
        {
            <input type="number" name="id" value="@ViewBag.data.ID" readonly hidden />
            <div class="row">
                <div class="col-md-4">
                    <p>Giảng viên mượn</p>
                    <select id="lecturerid" name="LecturerID" class="form-control " value="@ViewBag.data.IDLecturer">

                        @foreach (var item in ViewBag.ListLecture as IEnumerable<SchoolManager.Models.Lecturer>)
                        {
                            if (item.ID == ViewBag.data.IDLecturer)
                            {
                                <option value="@item.ID" selected>@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.ID">@item.Name</option>
                            }
                        }
                    </select>
                    <div class="error"></div>
                </div>

                <div class="col-md-4">
                    <p> Cơ sở vật chất </p>
                    <select id="lecturerid" name="ResourcesID" class="form-control " value="@ViewBag.data.ResourcesID">

                        @foreach (var item in ViewBag.ListResources as IEnumerable<SchoolManager.Models.Resources>)
                        {
                            if (item.ID == ViewBag.data.ResourcesID)
                            {
                                <option value="@item.ID" selected>@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.ID">@item.Name</option>
                            }
                        }
                    </select>
                    <div class="error"></div>
                </div>

                <div class="col-md-4">
                    <p>Trạng thái</p>
                    <select class="form-control status" value="@ViewBag.data.Status" name="status">
                        @if (ViewBag.data.Status == 0)
                        {
                            <option value="0" selected> Đang mượn </option>
                            <option value="1"> Đã trả </option>
                        }
                        else
                        {
                            <option value="0"> Đang mượn </option>
                            <option value="1" selected> Đã trả </option>
                        }


                    </select>
                    <div class="error"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8">
                    <p> Ghi chú </p>
                    <textarea class="form-control" name="node">@ViewBag.data.Node</textarea>
                </div>
            </div>
            <br />
            <div class="row m-0">
                <button class="btn-update" type="button" onclick="AddOrEdit('updateInfo' , '/ResourcesManagement/AddOrEdit' , '/ResourcesManagement/ListHistory' , 'get-data')"> Cập nhập </button>
            </div>
        }

    </form>

</div>


