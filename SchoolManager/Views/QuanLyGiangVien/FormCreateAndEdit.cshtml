



<form action="/" method="post" id="formAddOrEdit">
    @if (ViewBag.data == null)
    {
        <input type="number" name="id" value="0" class="form-control hidden" readonly hidden />
        <div class="row m-0">
            <div class="col-md-3">
                <label>Họ và tên</label>
                <input type="text" value="" name="name" class="form-control" />
                <div class="error"></div>
            </div>
            <div class="col-md-3">
                <label>Giới tính</label>
                <br />
                <div class="d-flex justify-content-between">
                    <input type="radio" name="gender" id="male" value="male" checked />
                    <label for="male"> Nam </label>
                    <input type="radio" name="gender" id="female" value="female" />
                    <label for="female"> Nữ </label>

                </div>

                <div class="error"></div>
            </div>
            <div class="col-md-3">
                <label>Ngày sinh</label>
                <input type="date" value="" name="birthday" class="form-control" />
                <div class="error"></div>
            </div>
            <div class="col-md-3">
                <label>Địa chỉ</label>
                <input type="text" value="" name="address" class="form-control" />
                <div class="error"></div>
            </div>
            <div class="col-md-3">
                <label>Số điện thoại</label>
                <input type="text" value="" name="phone" class="form-control" />
                <div class="error"></div>
            </div>
            <div class="col-md-3">
                <label>Email</label>
                <input type="text" value="" name="email" class="form-control" />
                <div class="error"></div>
            </div>
            <div class="col-md-3">
                <label>Tên khoa</label>
                <select class="form-control" id="FaculityID" name="FaculityID">
                    <option value="0">Chọn khoa</option>
                    @foreach (var item in ViewBag.faculties as IEnumerable<SchoolManager.Models.Faculty>)
                    {
                        <option value="@item.ID">@item.Name</option>
                    }
                </select>

                <div class="error"></div>
            </div>
            <div class="col-md-2">
                <label>Ghi chú</label>
                <input type="text" value="" name="node" class="form-control" />
            </div>
        </div>
    }
    else
    {
        <input type="number" name="id" value="@ViewBag.data.ID" class="form-control hidden" readonly hidden />
        <div class="row m-0">
            <div class="col-md-3">
                <label>Họ và tên</label>
                <input type="text" value="@ViewBag.data.Name" name="name" class="form-control" />
                <div class="error"></div>
            </div>
            <div class="col-md-3">
                <label>Giới tính</label>
                <br />
                @if (@ViewBag.data.Gender == false)
                {
                    <input type="radio" name="gender" id="male" value="male" /><p>Nam</p>
                    <input type="radio" name="gender" id="female" value="female" checked /><p>Nữ</p>
                }
                else
                {
                    <input type="radio" name="gender" id="male" value="male"  checked/><p>Nam</p>
                    <input type="radio" name="gender" id="female" value="female"  /><p>Nữ</p>
                }

                <div class="error"></div>
            </div>
            <div class="col-md-3">
                <label>Ngày sinh</label>
                <input type="date" value="@ViewBag.data.Birthday" name="birthday" class="form-control" />
                <div class="error"></div>
            </div>
            <div class="col-md-3">
                <label>Địa chỉ</label>
                <input type="text" value="@ViewBag.data.Address" name="address" class="form-control" />
                <div class="error"></div>
            </div>
            <div class="col-md-3">
                <label>Số điện thoại</label>
                <input type="text" value="@ViewBag.data.Phone" name="phone" class="form-control" />
                <div class="error"></div>
            </div>
            <div class="col-md-3">
                <label>Email</label>
                <input type="text" value="@ViewBag.data.Email" name="email" class="form-control" />
                <div class="error"></div>
            </div>
            <div class="col-md-3">
                <label>Tên khoa</label>
                <select class="form-control" id="FaculityID" name="FaculityID">
                    <option value="0">Chọn khoa</option>
                    @foreach (var item in ViewBag.faculties as IEnumerable<SchoolManager.Models.Faculty>)
                    {
                        if (ViewBag.data.FacultyID == item.ID)
                        {
                            <option value="@item.ID" selected>@item.Name</option>

                        }
                        else
                        {
                            <option value="@item.ID">@item.Name</option>

                        }
                    }
                </select>

                <div class="error"></div>
            </div>
            <div class="col-md-2">
                <label>Ghi chú</label>
                <input type="text" value="@ViewBag.data.Node" name="node" class="form-control" />
            </div>
        </div>
    }

</form>


