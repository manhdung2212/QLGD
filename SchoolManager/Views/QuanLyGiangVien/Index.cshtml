
@{
    ViewBag.Title = "Home Page";
}

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="user-app">
        <div class="d-flex justify-content-between data-header p-2">
            <h4 class="m-0 mt-1">  Người dùng </h4>
            <div class="d-flex justify-content-end">

                <input type="text" name="searchname" value="" placeholder="Nhập tên giảng viên cần tìm kiếm" />
                <button href="#demo" class="btn btn-primary mx-1" data-toggle="collapse" onchange="FilterBySubject()"> Nâng cao </button>
                <button class="btn btn-success btn-add" data-toggle="modal" data-target="#modalAdd" type="button" onclick="AddClick(0 , '/QuanLyGiangVien/FormCreateAndEdit' , 'add-or-edit')"> Thêm mới</button>
            </div>
        </div>
        <div id="demo" class="collapse">
            Lọc theo khoa:
            <select class="subjectID">
                <option>Chọn khoa cần lọc</option>
                @foreach (var item in ViewBag.ListFaculty as IEnumerable<SchoolManager.Models.Faculty>)
                {
                    <option value="@item.ID">@item.Name</option>
                }
            </select>
        </div>
        <div class="get-data m-2">

        </div>
        <hr />
        <div id="modalAdd" class="modal fade" role="dialog">
            <div class="modal-dialog modal-lg">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header bg-gradient-green">
                        <h4 class="modal-title text-white"> Cập nhập thông tin</h4>
                        <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="add-or-edit">


                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn-createEdit btn btn-success" onclick="AddOrEdit('formAddOrEdit' , '/QuanLyGiangVien/AddOrEdit' , '/QuanLyGiangVien/ListLecture' , 'get-data')"> Thêm mới</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                    </div>
                </div>

            </div>
        </div>
        
    </div>

@section scripts{
    <script>
        var data = {
            pageNumber: 1,
            pageSize: 5,
            search: '',
            subjectID: 0,
        }
        GetListStudent('/QuanLyGiangVien/ListLecture', 'get-data');
        Search('/QuanLyGiangVien/ListLecture', 'get-data');
    </script>
}


